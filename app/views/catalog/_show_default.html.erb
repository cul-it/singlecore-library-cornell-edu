<%# default partial to display solr document fields in catalog show view -%>

<%# show image %>


<div id="openseadragon1" style="width: 800px; height: 600px"></div>
<script type="text/javascript">
    var viewer = OpenSeadragon({
        id: "openseadragon1", 
        showNavigator: true,      
        tileSources: {
        type: 'legacy-image-pyramid',
        levels:[{
            url: '<%= render_document_show_field_value :document => document, :field => "media_URL_tesim" %>',
            width: <%= render_document_show_field_value :document => document, :field => "img_width_tesim" %>,

            height:<%= render_document_show_field_value :document => document, :field => "img_height_tesim" %>
            
        }]
    }

    });
</script>


<%# show image %>
<% if document[:id] == '2877880' %>

		<div id="kaltura_player_1433416083" style="width: 560px; height: 80px;" itemprop="video" itemscope itemtype="http://schema.org/VideoObject" class="player">
			<span itemprop="name" content="AFR_RL_5_AM_01_03"></span>
			<span itemprop="description" content=""></span>
			<span itemprop="duration" content="286"></span>
			<span itemprop="thumbnail" content="https://cdnsecakmi.kaltura.com/p/518251/sp/51825100/thumbnail/entry_id/<%= render_document_show_field_value :document => document, :field => "KalturaID_s" %>/version/0/acv/61"></span>
			<span itemprop="width" content="560"></span>
			<span itemprop="height" content="80"></span>
		</div>
		<script src="https://cdnapisec.kaltura.com/p/518251/sp/51825100/embedIframeJs/uiconf_id/12903201/partner_id/518251?autoembed=true&entry_id=1_cppy0b87&playerId=kaltura_player_1433416083&cache_st=1433416083&width=560&height=80"></script>
<% end %>

<%# show fields except image and kaltura ID %>
<dl class="dl-horizontal  dl-invert">
  	<% document.each do |field_name, field| -%>
  	<% if !field.blank? && !field_name.include?("_ssi") && field.is_a?(Array) %>
  		<% unless field_name == 'Media_URL_s' || field_name =='KalturaID_s' || field == '" "'%>
	    	<dt class="blacklight-<%= field_name.parameterize %>"><%= field_name %></dt>
	    	<dd class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_value document, field: field_name %></dd>
	    <% end -%>
	    <% end %>
  <% end %>
</dl>



