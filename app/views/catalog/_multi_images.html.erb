<% if get_zorn_multiviews(@document).length > 1 %>
	<h2>Additional views</h2>
	<div class="multi-image-wrapper">
		<% get_zorn_multiviews(@document).each do |image| %>
			<% if image["id"] != @document["id"] %>
				<div class="multi-image">
					<a href="/catalog/<%= image['id'] %>" data-turbolinks="false">
					    <img src='<%= image["media_URL_size_2_tesim"][0] %>' class="img-responsive" alt="" />
						<span class="caption">
							<%= image['title_tesim'][0] %>
						</span>
					</a>
				</div>
			<% end %>
		<% end %>
	</div>
<% elsif get_blaschka_multiviews(@document).length > 1 %>
	<h2>Additional views</h2>
	<div class="multi-image-wrapper">
		<% get_blaschka_multiviews(@document).each do |image| %>
			<% if image["id"] != @document["id"] %>
				<div class="multi-image">
					<a href="/catalog/<%= image['id'] %>" data-turbolinks="false">
							<img src='<%= image["media_URL_size_2_tesim"][0] %>' class="img-responsive" alt="" />
						<span class="caption">
							<%= image['title_tesim'][0] %>
						</span>
					</a>
				</div>
			<% end %>
		<% end %>
	</div>
<% end %>
