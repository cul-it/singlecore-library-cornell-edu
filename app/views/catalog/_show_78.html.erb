<%# default partial to display solr document fields in catalog show view -%>
<%# aerial item view -%>

<% params[:subject] = 'aerialny' %>

<%# show image %>
<div id="openseadragon1" style="width: 600px; height: 400px; background-color:#000"></div>
<script type="text/javascript">
    var viewer = OpenSeadragon({
        id: "openseadragon1", 
        prefixUrl: "/assets/",
        showNavigator: true,      
        tileSources: {
        type: 'legacy-image-pyramid',
        levels:[{
            url: '<%= render_document_show_field_value :document => document, :field => "media_URL_tesim" %>',
            width: <%= render_document_show_field_value :document => document, :field => "img_width_tesim" %>,

            height:<%= render_document_show_field_value :document => document, :field => "img_height_tesim" %>
            
        }]
    }

    });
</script>





<%# show fields except image and kaltura ID %>
<dl class="dl-horizontal  dl-invert">
  	<% document.each do |field_name, field| -%>
  	<% if !field.blank? && field_name != "image_restricted_tesim" %>

      <dt class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_label document, field: field_name %></dt>
      <dd class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_value document, field: field_name %></dd>

	    <% end %>
  <% end %>
</dl>
