<div class="hero">
  <div class="container home-text">
    <div class="home-search">
      <div class="row">
        <div class="col-sm-8">
          <%= render_search_bar  %>
        </div>
        <div class="col-sm-4 home-browse">
          or <a href="/collections">browse collections<i class="fa fa-arrow-right"></i></a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-6 col-md-4 col-md-offset-8">
        <div class="well">
          <h1><%= t('blacklight.welcome') %></h1>
          <p>We're transitioning to a new, more integrated search platform for our digital collections. In the meantime you can search this site, or <a href="http://newcatalog.library.cornell.edu/digitalcollections">view a complete list of our digital collections</a>.</p>
          <p>Your feedback is valuable to us. Please <a href="/contact">contact us</a> and let us know what you think of this site, or <a href="https://cornell.qualtrics.com/SE/?SID=SV_6xJYx0iSrV5pDE1" target="_blank">take a brief survey</a>.</p>
        </div>
        <a class="image-credits" href="/image-credits">Image credits</a>
      </div>
    </div>
  </div>
</div>
<%= render 'recently_added' %>

<script type="text/javascript">
  jQuery(document).ready(function() { 
  var randomImages = ['blaschka','hill','jcm-iceland','tell-en-nasbeh', 'sterrett','rmc','anthro','straight','vicos'];
  var rndNum = Math.floor(Math.random() * randomImages.length); 
  jQuery(".hero").css({ background: "url('/hero/" + randomImages[rndNum] + ".jpg') no-repeat" }); });
</script>