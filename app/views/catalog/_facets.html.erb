<% # main container for facets/limits menu -%>
<% if has_facet_values?  %>
<div id="facets" class="facets sidenav">

  <div class="top-panel-heading panel-heading">
    <button type="button" class="facets-toggle visible-xs" data-toggle="collapse" data-target="#facet-panel-collapse">
      <i class="fa fa-bars"><span class="sr-only">Toggle facets</span></i>
      Limit your search
    </button>

    <h4 class="facets-heading hidden-xs">
    	<%= t('blacklight.search.facets.title') %>
    </h4>
  </div>

  <div id="facet-panel-collapse" class="collapse panel-group">
    <%= render_facet_partials %>
  </div>
</div>
<% end %>
