<% document = locals[:document] %>
<% collection_nickname = (render_index_field_value document, :field => 'collection_nickname_ssi').present? ? (render_index_field_value document, :field => 'collection_nickname_ssi') : '' %>
<% if collection_nickname == 'blaschka' %>
    <% field = compound_legacy_label document, 'Common Name' %>
    <% if field.present? %>
        <dt class="blacklight-common_name_tesim col-md-3"><%=h 'Common Name:' %></dt>
        <dd class="blacklight-common_name_tesim col-md-9"><%=h field %></dd>
    <% end %>
    <% field = compound_identifier document, 'Blaschka Number' %>
    <% if field.present? %>
        <dt class="blacklight-identifier_blaschka_isi col-md-3"><%=h 'Blaschka Number:' %></dt>
        <dd class="blacklight-identifier_blaschka_isi col-md-9"><%=h field %></dd>
    <% end %>
<% end %>