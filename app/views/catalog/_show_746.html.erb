<%# ragamala item view -%>

<% params[:subject] = 'ragamala' %>

<%= render 'image_viewer_legacy' %>

<div class="col-md-4">
  <%# show fields except image and kaltura ID %>
  <dl class="metadata">
    <% if (render_document_show_field_value :document => document, :field => "deity_central_figure_tesim").present? %>
      <dt class="blacklight-deity">
        Central Deity
      </dt>
      <dd class="blacklight-deity">
        <%= render_document_show_field_value :document => document, :field => "deity_central_figure_tesim" %>
      </dd>
    <% end %>
    <% if (render_document_show_field_value :document => document, :field => "style_period_tesim").present? %>
      <dt class="blacklight-period">
        Style/Period
      </dt>
      <dd class="blacklight-period">
        <%= render_document_show_field_value :document => document, :field => "style_period_tesim" %>
      </dd>
    <% end %>
    <% if (render_document_show_field_value :document => document, :field => "description_tesim").present? %>
      <dt class="blacklight-description">
        Description
      </dt>
      <dd class="blacklight-description">
        <%= render_document_show_field_value :document => document, :field => "description_tesim" %>
      </dd>
    <% end %>
    <% if (render_document_show_field_value :document => document, :field => "Collection_tesim").present? %>
      <dt class="blacklight-collection">
        Collection
      </dt>
      <dd class="blacklight-collection">
        <%= render_document_show_field_value :document => document, :field => "Collection_tesim" %>
      </dd>
    <%end%>
    <% if (render_document_show_field_value :document => document, :field => "fd_43718_ssi").present? %>
      <dt class="blacklight-country">
        Country
      </dt>
      <dd class="blacklight-country">
        <%= render_document_show_field_value :document => document, :field => "fd_43718_ssi" %>
      </dd>
    <%end%>
  </dl>
  <%= render 'show_download' %>
</div>